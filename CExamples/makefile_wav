# Example makefile for SigLib example

SIGLIB_CFLAGS = -I../include -I../nhl -I../gnuplot_c
SIGLIB_LIBS = -L../lib/linux -lsiglib -L../nhl -lnhl -L../gnuplot_c -lgnuplot_c

PROGRAM=dtmfwav

G =         # debug option here
CC = gcc    # compiler

# target
all: $(PROGRAM)
$(PROGRAM) : $(PROGRAM).o
	$(CC) -o $(PROGRAM) $(PROGRAM).o $(SIGLIB_LIBS) -lm
$(PROGRAM).o : $(PROGRAM).c
	$(CC) -c $(PROGRAM).c $(SIGLIB_CFLAGS)

clean:
	/bin/rm -f *.o $(PROGRAM)
